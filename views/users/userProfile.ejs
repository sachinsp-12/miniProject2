
<%- include ('../partials/userHeader.ejs') %>


<% if( Address ){ %>

    <form action="" method="post">
        <div class="row">
            <div class="col-lg-3 col-md-3"></div>
            <div class="col-lg-6 col-md-6">
                
                <h3 class="checkout__title">Edit  Adress </h3>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="checkout__input">
                            <p>Full Name <span>*</span></p>
                            <input name="name" value="<%= Address.Name %>"  type="text">
                        </div>
                    </div>
                </div>
                <div class="checkout__input">
                    <p>Country <span>*</span></p>
                    <input value="<%= Address.Country %>" name="country" type="text">
                </div>
