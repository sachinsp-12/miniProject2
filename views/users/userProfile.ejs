                    <p>State<span>*</span></p>
                    <input value="<%= Address.State %>" name="state" type="text">
                </div>
                <div class="checkout__input">
                    <p>Postcode<span>*</span></p>
                    <input value="<%= Address.Postcode %>" name="postcode" type="text">
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="checkout__input">
                            <p>Phone<span>*</span></p>
                            <input value="<%= Address.Phone %>" name="phone" type="text">
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="checkout__input">
                            <p>Email<span>*</span></p>
                            <input value="<%= Address.Email %>" name="email" type="text">
                        </div>
                    </div>
                    <input type="submit" class="btn btn-success" name="" style="margin-bottom: 10px;">
                </div>
            </div>
            <div class="col-lg-3 col-md-3"></div>
            
        </div>
    
           
    </form> 

