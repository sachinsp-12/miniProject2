<%- include ('../partials/userHeader.ejs') %>
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Order History</h4>
                    <div class="breadcrumb__links">
                        <a href="./index.html">Home</a>
                        <a href="./shop.html">Shop</a>
                        <span>Order History</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="shopping-cart spad col-12">
    
    <div class="container ">
        <h3> Order History</h3>
        <div class="row" style="background-color: #f3f2ee ">
            <div class="col-lg-12">               
                <div class="shopping__cart__table">                  
                     <table class="table">
                        <thead>
                            <tr  >
                                <th >Orderid</th>                              
                                <th>Discount</th>
                                <th>Payment</th>
                                <th>Status</th>                           
                                <th>Total</th>                              
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>

                            <h1> <% order.name %> </h1>                           
                            <% if(order ){ %>                               
                                <%   for( let key of order){   %>    
                                    
                                    <% if( key.isavailable ==0 ) { %>
                                        <tr>
                                            <td class="product__cart__item">
                                                <div class="product__cart__item__pic">
                                                    <h4><strong> <%= key._id %>  </strong></h4>  
                                                </div>                                      
                                            </td>                                         
                                            <td class="quantity__item">
                                                <div class="quantity">
                                                  
                                                  <h4> <strong><%=key.offer %></strong></h4> 
                                                </div>
                                            </td>                                            
                                            <td class="quantity__item">
                                                <div class="quantity">
                                                  
                                                  <h4> <strong><%=key.payment %></strong></h4> 
                                                </div>
                                            </td>
                                            <td class="quantity__item">
                                                <div class="quantity">
                                                  
                                                  <h4> <strong><%=key.status %></strong></h4> 
                                                </div>
                                            </td>    
                                            <td class="quantity__item">
                                                <div class="quantity">                                                 
                                                  <h4> â‚¹. <%=key.products.totalPrice %></h4> 
                                                  
                                                </div>      
                                            </td>
                                            
                                                
                                            <td class="quantity__item">
                                                <div class="quantity">                                                                                                                                       
                                                   <a href="vieworder?id=<%=key._id %>" class="btn btn-info my-2">View</a>
                                                   <button type="button" onclick="return confirm('do you want to cancel the order <%=key._id %>')" class="btn btn-danger my-2" style="font-size:20px; "><a style="color: white;" href="deleteorder?id=<%=key._id %>" >Cancel</a></button>
                                                   <button type="button" onclick="return confirm('do you want to return the products  <%=key._id %>')" class="btn btn-primary my-2" style="font-size:20px; "><a style="color: white;" href="returnorder?id=<%=key._id %>" >Return</a></button>
                                                </div>
                                            </td>
                                           
                                        </tr>
                                    <% }  %>                                                                    
                                <% }  
                   
                }   
                  else{ %>
                    <h1> You havent ordered anything </h1>
                    <% } %>
                               
                       
                        </tbody>
                    </table>
                </div>
                
            </div>
          
        </div>
    </div>
</section>                       

<%- include ('../partials/userFooter.ejs') %>
