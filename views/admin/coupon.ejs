



<%- include ('../partials/adminheader.ejs') %>




<div class="content-wrapper">
<div class="row">
    <div class="col-12 ">
 
      <div class="card">
        
        <div class="card-body">
          <h2 class="card-title">Add Coupon</h2>
        <p class="card-description">
         
        </p>
         <form class="forms-sample" action="" method="post">
          <div class="form-group">
            <label for="exampleInputName1"> new coupon</label>
            <input type="name" name="name" class="form-control" id="exampleInputName1" placeholder="Name" required>
          </div>
          <div class="form-group">
            <label for="exampleInputName1"> discount</label>
            <input type="number" name="discount" class="form-control" id="exampleInputName1" placeholder="" required>
          </div>
          
         
          
           
          <button type="submit" class="btn btn-success mr-2">Submit</button>
          <button class="btn btn-light" >Cancel</button>
        </form>








          <h4 class="card-title ">Coupon list</h4>
          <button class="btn btn-danger float-right" ><a href="/admin/addproduct"  style="font-size: 20px; color: white;">Add Product</a> </button> 
          <div class="table-responsive" style="width: 170vh;">
            <table class="table">
              <thead>
                <tr>
                  <th>
                    Coupon Name
                  </th>
                  <th>
                    Coupon Id
                  </th>
                  <th>
                    Coupon Discount
                  </th>
                  <th>
                    isavailable
                  </th>
                  <th>
                  Action
                  </th>
                 
                </tr>
              </thead>
              <tbody>
                                <% if(coupondata.length>0 ){

                                  for(let i=1;i<=coupondata.length;i++){ %>
                                <tr>
                                  <td>
                                     <%= coupondata[i-1].name %>
                                  </td>
                                  <td>
                                     <%= coupondata[i-1].id%>
                                  </td>
                                  <td>
                                     <%= coupondata[i-1].discount%>
                                  </td>
                                  <td>
                                     <%= coupondata[i-1].isavailable%>
                                  </td>
                                  <td>

                                    <% if(coupondata[i-1].isavailable==0 ){  %>
                                        <button type="button" onclick="return confirm('do you want to hide category <%= coupondata[i-1].name%>')" class="btn btn-danger" style="font-size:20px; "><a style="color: white;" href="/admin/deleteCategory?id=<%= coupondata[i-1]._id %>" >Hide</a></button>
                                        <%  }
                                       else{ %>
                                        <button type="button" onclick="return confirm('do you want to show the category <%= coupondata[i-1].name%>')" class="btn btn-danger" style="font-size:20px; "><a style="color: white;" href="/admin/showCategory?id=<%= coupondata[i-1]._id %>" >Show</a></button>
                                        <% } %>                                                                                                
                                    </td>
                                </tr>
                                  <% } 
                   
                  }   
                    else{ %>
                      <tr>
                        <td colspan="5">users not found </td>
                      </tr>
                      <% } %>


                              </tbody>

             
              
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>






<%- include ('../partials/adminFooter.ejs') %>