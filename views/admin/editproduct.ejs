<div class="content-wrapper">
    <div class="row">

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Edit Data</h4>
        <p class="card-description">
         
        </p>
        <form class="forms-sample" action="" method="post" enctype="multipart/form-data">
          <div class="form-group">
            <label for="exampleInputName1">Product Name</label>
            <input type="name" name="name" class="form-control" id="exampleInputName1"  value="<%= product.name %> " required>
          </div>
           <div class="form-group">
            <label for="exampleInputEmail3">Category</label>
            <input type="text" name="category" class="form-control" id="exampleInputEmail3"  value="<%= product.category %> ">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword4">Rating</label>
            <input type="text" name="rating"class="form-control" id="exampleInputPassword4" value="<%= product.rating %>">
          </div>
          <div class="form-group">
            <label for="exampleInputCity1">Price</label>
            <input type="text" name="price" class="form-control" id="exampleInputCity1"  value="<%= product.price %>">
          </div>
          <!-- <div class="form-group">
            <label for="exampleInputCity1"> is stock available </label>
