            <label for="exampleInputCity1">available stock</label>
            <input type="text" name="stock" class="form-control" id="exampleInputCity1" value="<%=  product.stock %>">
          </div>

          <div class="form-group">
            <label for="exampleInputCity1">is available</label>
            <input type="text" name="isavailable" class="form-control" id="exampleInputCity1" value="<%=  product.isavailable %>">
          </div>


          <div class="form-group">
            <label for="exampleTextarea1">Description</label>
            <textarea class="form-control" name="description" id="exampleTextarea1" rows="2"  value="<%=  product.description%>" ></textarea>
          </div> 
          <img src="/assets/uploads/<%=  product.image%>" width="100px" height="100px" alt="">
          <div class="d-flex flex-row align-items-center mb-4">
            <div class="form-outline flex-fill mb-0">
            <label class="form-label" for="form3Example4c">Image</label>
            <input type="file"  id="form3Example4c" class="form-control" name="image" value="hello.jpg" />
          </div>
        </div>
          <button type="submit" class="btn btn-success mr-2">Submit</button>
          <button class="btn btn-light">Cancel</button>
        </form>
      </div>
    </div>
  </div>


