                    <i class="far fa-edit mb-5"></i>
                  </div>
                  <div class="col-md-8">
                    <div class="card-body p-4">
                      <h6>Information</h6>
                      <hr class="mt-0 mb-4">
                      <div class="row pt-1">
                        <div class="col-6 mb-3">
                          <h6>Email</h6>
                         <h3><%= user.email %></h3> 
                        </div>
                        <div class="col-6 mb-3">
                          <h6>Phone</h6>
                          <h3><%= user.mobile %></h3>
                          
                        </div>
                        <div class="col-6 mb-3">
                            <h6>is_blocked</h6>
                            <%  if (user.is_blocked==0) {%>
                               
                                <h3>No</h3>
                                 
                                  
                                  <% }
                                else{%>
                                  <h3>Yes</h3>
                                 
                                  <%}
                                
                                  %>

                          
                          </div>
                      </div>
                      <h6>Adress</h6>
                  <hr class="mt-0 mb-4">
